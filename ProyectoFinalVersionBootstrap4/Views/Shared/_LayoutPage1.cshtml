@{//Definiendo si el usuario ya esta registrado
    var obj = (ProyectoFinalVersionBootstrap4.Models.USUARIO)Session["Usuario"];
    if (obj != null) { 
      ViewBag.Usuario=obj.NOMBRE.ToString();
    }           
      }

<!DOCTYPE html >

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
   @using System.Web.Optimization;
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" />

</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="font-family: 'Jost', sans-serif;position:fixed;width:100%;">
       
        <a class="navbar-brand " href="#" style="font-size:25px;color:#fccf52">
            <img src="~/Imagenes/comida-rapida.svg" height="40" width="40" class="d-inline-block aling-top" />
            TUBAJONSV
        </a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#Inicio">Inicio <span class="sr-only">(current)</span></a>
                </li>
               
                <li class="nav-item"><a class="nav-link" style="cursor:pointer" href="#Comidas">Buscar Comidas</a></li>
                <li class="nav-item"><a class="nav-link" style="cursor:pointer;" href="#Cercademi">Cerca de mi</a></li>
                <li class="nav-item"><a class="nav-link" style="cursor:pointer;" href="#Atributos">Favoritos</a></li>
                
            </ul>
            <form class="form-inline my-2 my-lg-0">
                @if (ViewBag.Usuario == null)
                {
                    <div id="identificate" style="background:#fccf52;border-radius:10px;width:150px;height:40px;text-align:center;line-height:40px;">
                        <a class="nav-item" id="labelidentificate" style="cursor:pointer;font-size:17px;text-decoration:none;color:black" data-toggle="modal" href="#ventanalogin">Identificate</a>

                    </div>
                }
                else
                {
                    <div id="identificate" style="background:#fccf52;border-radius:10px;width:150px;height:40px;text-align:center;line-height:40px;">
                        <label class="nav-item" id="labelidentificate" style="cursor:pointer;font-size:17px;text-decoration:none;color:black">Bienvenido,@ViewBag.Usuario</label>

                    </div>
                    <div  style="background:none;border-radius:10px;width:150px;height:40px;text-align:center;line-height:40px;">
                        @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home", new {@class="btn btn-outline-secondary" })
                    </div>


                }

            </form>
        </div>
    </nav>
    <!--Ventana modal Login-->
    <div class="modal fade" id="ventanalogin">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center">Ingresar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="@Url.Content("~/Home")" method="post">
                    <div class="modal-body text-center">
                        <img src="~/Imagenes/undraw_profile_pic_ic5t.svg" height="200" width="200" class="img-fluid" />
                        <br />

                        <div class="form-group">
                            <label>Usuario</label>
                            <br />
                            <input type="email" name="Usuario" />
                        </div>
                        <div class="form-group">
                            <label>Contrasenia</label>
                            <br />
                            <input type="password" name="Password" />
                        </div>
                        <br />
                        <label>No tienes usuario?<strong class="registrate"><a data-toggle="modal" data-dismiss="modal" style="text-decoration:none;" href="#ventanaregistro">Registrate</a></strong></label>
                        <br />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Ingresar</button>


                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--Fin modal Login-->
    <!--Ventana modal Registro-->
    <div class="modal fade" id="ventanaregistro">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center">Registrarse</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    
                    <label>Ya tienes usuario?<strong class="registrate"><a data-toggle="modal" data-dismiss="modal" href="#ventanalogin">Ingresa aca</a></strong></label>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" data-dismiss="modal">Registrarme</button>

                </div>
            </div>
        </div>
    </div>
    <!--Fin modal Login-->
    
    <div>
        @RenderBody()
    </div>
</body>
</html>
