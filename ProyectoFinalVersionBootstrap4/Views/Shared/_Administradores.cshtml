@{//Definiendo si el usuario ya esta registrado
    var obj = (ProyectoFinalVersionBootstrap4.Models.USUARIO)Session["Administrador"];
    if (obj != null)
    {
        ViewBag.Usuario = obj.NOMBRE.ToString();
    } 

}

<!DOCTYPE html >

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
   @using System.Web.Optimization;
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" type="text/css" />
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" />

</head>
<body>
  <nav class="navbar navbar-expand-lg " style="font-family: 'Jost', sans-serif;background:#0b132b;position:fixed;width:100%;height:65px !important;z-index:0">
       
      <a class="navbar-brand " href="~/Administrador/InicioAdministradores" style="font-size:25px;color:#90C2E7">
          <div class="d-inline-block aling-top" ><i class="fa fa-area-chart"></i></div>
          TUBAJON-Administradores
      </a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>


      <form class="form-inline ml-auto">

          <div style="background:#90C2E7;border-radius:10px;width:150px;height:40px;text-align:center;line-height:40px;">

              <a class="nav-item"  style="cursor:pointer;font-size:17px;text-decoration:none;color:black">Bienvenido,@ViewBag.Usuario</a>

          </div>
          <div style="background:none;border-radius:10px;width:150px;height:40px;text-align:center;line-height:40px;">
              @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Administrador", new { @class = "btn btn-outline-secondary" })
          </div>
      </form>

    </nav>
   
    
    <div>
        @RenderBody()
    </div>
</body>
</html>
